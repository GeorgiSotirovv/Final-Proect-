@model IEnumerable<CigarilloViewModel>

@{
    ViewBag.Title = "All Cigarillo";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">

    <form class="input-group-sm" asp-controller="Cigarillo" asp-action="AddCigarillo">
            <a class="fs-6 btn btn-success mb-3 p-2 " asp-area="" asp-controller="Cigarillo" asp-action="AddCigarillo">Add AddCigarillo</a>
    </form>

    @foreach (var cigarillo in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <img class="card-img-top" style="width: 18rem;"
             src="@cigarillo.ImageUrl" alt="Cigarillo Image">
            <div class="card-body">

                <h5 class="card-title mt-1">@cigarillo.Brand</h5>
                <p class="mb-0">Filter : @cigarillo.Filter</p>
                <p class="mb-0">Country of manufacturing: @cigarillo.CountryOfManufacturing</p>
                <p class="mb-0">Comment: @cigarillo.Comment</p>
            </div>

           <form class="input-group-sm" asp-controller="Cigarillo" asp-action="AddFavoriteCigarillo" asp-route-CigarilloId="@cigarillo.Id">
                <input type="submit" value="Add to Favorite" class="fs-6 btn btn-success mb-3 p-2" />
            </form>
        </div>
    }
</div>