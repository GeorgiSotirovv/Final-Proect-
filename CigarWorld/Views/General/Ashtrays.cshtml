@using CigarWorld.Models.BaseModels
@model IEnumerable<AshtrayViewModel>

@{
    ViewBag.Title = "All Ashtray";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    <form class="input-group-sm" asp-controller="General" asp-action="AddAshtray">
            <input type="submit" value="Add Ashtray" class="fs-6 btn btn-success mb-3 p-2" />
    </form>
    @foreach (var ashtray in Model)
    {
        <div class="card col-4" style="width: 50rem; ">
            <img class="card-img-top" style="width: 20rem;"
             src="@ashtray.ImageUrl" alt="Ashtray Image">
            <div class="card-body">

                <h5 class="card-title mt-1">@ashtray.Brand</h5>
                <p class="mb-0">Type: @ashtray.Type</p>
                <p class="mb-0">Country of manufacturing: @ashtray.CountryOfManufacturing</p>
                <p class="mb-0">Comment: @ashtray.Comment</p>
            </div>

           @* <form class="input-group-sm" asp-controller="Ashtray" asp-action="AddToCollection" asp-route-bookId="@ashtray.Id">
                <input type="submit" value="Add to Collection" class="fs-6 btn btn-success mb-3 p-2" />
            </form>
            *@
        </div>
    }
</div>
