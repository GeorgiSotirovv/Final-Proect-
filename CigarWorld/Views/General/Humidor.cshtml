@using CigarWorld.Models.JustModels
@model IEnumerable<HumidorViewModel>

@{
    ViewBag.Title = "All Humidors";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">

    <form class="input-group-sm" asp-controller="General" asp-action="AddHumidor">
            <a class="fs-6 btn btn-success mb-3 p-2 " asp-area="" asp-controller="General" asp-action="AddHumidor">Add Humidor</a>
    </form>

    @foreach (var cigar in Model)
    {
        <div class="card col-4" style="width: 50rem; ">
            <img class="card-img-top" style="width: 20rem;"
             src="@cigar.ImageUrl" alt="Ashtray Image">
            <div class="card-body">

                <h5 class="card-title mt-1">@cigar.Brand</h5>
                <p class="mb-0">Height : @cigar.Height</p>
                <p class="mb-0">Length : @cigar.Length</p>
                <p class="mb-0">Weight : @cigar.Weight </p>
                <p class="mb-0">Capacity : @cigar.Capacity </p>
                <p class="mb-0">Country of manufacturing: @cigar.CountryOfManufacturing</p>
                <p class="mb-0">Material of manufacture: @cigar.MaterialOfManufacture</p>
            </div>

           @* <form class="input-group-sm" asp-controller="Ashtray" asp-action="AddToCollection" asp-route-bookId="@ashtray.Id">
                <input type="submit" value="Add to Collection" class="fs-6 btn btn-success mb-3 p-2" />
            </form>
            *@
        </div>
    }
</div>