@model IEnumerable<CutterViewModel>

@{
    ViewBag.Title = "All Cutters";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">

    <form class="input-group-sm" asp-controller="Cutter" asp-action="AddCutter">
            <a class="fs-6 btn btn-success mb-3 p-2 " asp-area="" asp-controller="Cutter" asp-action="AddCutter">Add Cutter</a>
    </form>

    @foreach (var cutter in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <img class="card-img-top" style="width: 18rem;"
             src="@cutter.ImageUrl" alt="Ashtray Image">
            <div class="card-body">

                <h5 class="card-title mt-1">@cutter.Brand</h5>
                <p class="mb-0">Type: @cutter.Type</p>
                <p class="mb-0">Country of manufacturing: @cutter.CountryOfManufacturing</p>
                <p class="mb-0">Comment: @cutter.Comment</p>
            </div>

            <form class="input-group-sm" asp-controller="Cutter" asp-action="AddFavoriteCutter" asp-route-cutterId="@cutter.Id">
                <input type="submit" value="Add to Collection" class="fs-6 btn btn-success mb-3 p-2" />
            </form>
            
        </div>
    }
</div>