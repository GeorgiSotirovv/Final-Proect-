@model AshtrayDetailsViewModel

@{
    ViewBag.Title = "Details and Reviews";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />


<!DOCTYPE html>
<html>
<head>
    
</head>

<body>
    <div id="boxes">

        <div id="leftbox">
            <div class="container">
                <div class="row justify-content-start">

                    <div class="card col-4" style="width: 20rem; ">

                        <img class="card-img-top" style="width: 18rem;"
                             src="@Model.ImageUrl" alt="Ashtray">

                        <div class="card-body">

                            <h5 class="card-title mt-1">@Model.Brand</h5>
                            <p class="mb-0">Type: @Model.Type</p>
                            <p class="mb-0">Comment: @Model.Comment</p>
                            <p class="mb-0">Country Of Manufacturing: @Model.CountryOfManufacturing</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="middlebox">
            <h2>GeeksforGeeks:</h2>
            The course focuses on various MCQ's & Coding
            question likely to be asked in the interviews
            & make your upcoming placement season efficient
            and successful.
        </div>

        <div id="rightbox">
            <div class="mb-3">
                <label asp-for="@Model.Comment" class="form-label">Comment</label>
                <textarea asp-for="@Model.Comment" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
        </div>
    </div>
</body>
</html>

<style>
        #leftbox {
            float: left;
            width: 25%;
            height: 280px;
        }

        #middlebox {
            float: left;

            width: 46%;
            height: 280px;
        }

        #rightbox {
            float: right;
            width: 25%;
            height: 280px;
        }

        h1 {
            color: green;
            text-align: center;
        }
    </style>











