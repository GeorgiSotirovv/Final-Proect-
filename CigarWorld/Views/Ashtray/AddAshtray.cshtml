@model AddAshtrayViewModel

@{
    ViewBag.Title = "Add Ashtray";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="AddAshtray" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Brand" class="form-label">Brand </label>
                <input asp-for="@Model.Brand" class="form-control" aria-required="true" placeholder="Cohiba, Habana, etc."/>
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.CountryOfManufacturing" class="form-label">CountryOfManufacturing </label>
                <input asp-for="@Model.CountryOfManufacturing" class="form-control" aria-required="true" placeholder="China, Columbia, etc."/>
                <span asp-validation-for="CountryOfManufacturing" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label">Image URL</label>
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true"  placeholder="Please place here you Url with the picture."/>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Comment" class="form-label">Comment</label>
                <textarea asp-for="@Model.Comment" class="form-control" aria-required="true" placeholder="This is ..." rows="5"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.TypeId" class="form-label">Type</label>
                <select asp-for="@Model.TypeId" class="form-control">
                    @foreach (var type in Model.AshtrayTypes)
                    {
                        <option value="@type.Id">@type.Name</option>
                    }
                </select>
                <span asp-validation-for="TypeId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="AddAshtray" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
