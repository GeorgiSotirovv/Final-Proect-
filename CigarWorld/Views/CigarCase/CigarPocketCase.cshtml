@model IEnumerable<AllCigarPocketCaseViewModel>

@{
    ViewBag.Title = "Details and Reviews";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @if (TempData.ContainsKey(WebConstants.GlobalAddMessage))
    {
        <div class="alert alert-success" role="alert">
            @TempData[WebConstants.GlobalAddMessage]
        </div>
    }
    @if (TempData.ContainsKey(WebConstants.GlobalDeleteMessage))
    {
        <div class="alert alert-success" role="alert">
            @TempData[WebConstants.GlobalDeleteMessage]
        </div>
    }
    @if (TempData.ContainsKey(WebConstants.GlobalAddToFavoritesMessage))
    {
        <div class="alert alert-success" role="alert">
            @TempData[WebConstants.GlobalAddToFavoritesMessage]
        </div>
    }

    <form class="input-group-sm" asp-controller="CigarCase" asp-action="AddCigarPocketCase">
        <a class="fs-6 btn btn-success mb-3 p-2 " asp-area="" asp-controller="CigarCase" asp-action="AddCigarPocketCase">Add Cigar Pocket Case</a>
    </form>

    @foreach (var CPC in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <a href="/CigarCase/Details?id=@CPC.Id">
                <img class="card-img-top" style="width: 18rem;"
                 src="@CPC.ImageUrl" alt="Cigar Pocket Cases Image">
            </a>
            <div class="card-body">

                <h5 class="card-title mt-1">@CPC.Brand</h5>

            </div>

            <a class="fs-6 btn btn-success mb-3 p-2" href="/CigarCase/Edit?id=@CPC.Id" aria-required="true">Edit</a>

            <form class="input-group-sm" asp-controller="CigarCase" asp-action="RemoveFromDataBase" asp-route-CigarPocketCaseId="@CPC.Id">
                <input type="submit" value="Remove" class="fs-6 btn btn-success mb-3 p-2" />
            </form>

            <form class="input-group-sm" asp-controller="CigarCase" asp-action="AddFavoriteCigarPocketCase" asp-route-CigarPocketCaseId="@CPC.Id">
                <input type="submit" value="Add to Favorite" class="fs-6 btn btn-success mb-3 p-2" />
            </form>

        </div>
    }
</div>