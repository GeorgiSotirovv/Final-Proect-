@model CigarCaseDetailsViewModel

@{
    ViewBag.Title = "Details and Reviews";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />


<!DOCTYPE html>
<html>
<head>

</head>

<body>
    <div id="boxes">
        <div id="leftbox">
            <div class="container">
                <div class="row justify-content-start">

                    <div class="card col-4" style="width: 20rem; ">

                        <img class="card-img-top" style="width: 18rem;"
                             src="@Model.ImageUrl" alt="CigarCase">

                        <div class="card-body">

                            <h5 class="card-title mt-1">@Model.Brand</h5>
                            <p class="mb-0">Country Of Manufacturing: @Model.CountryOfManufacturing</p>
                            <p class="mb-0">Comment: @Model.Comment</p>
                            <p class="mb-0">MaterialOfManufacture: @Model.MaterialOfManufacture</p>
                            <p class="mb-0">Capacity: @Model.Capacity</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="middlebox">
            <h2 style="text-align:center">Cigar Pocket Cases Reviews by our users</h2>
            <div style="border-style: solid">
                <ul>
                    @foreach (var review in Model.CigarPocketCaseReviews)
                    {

                            @if (Model.UserName == review.Commenter || Model.UserName == "Admin")
                            {
                                <div id="container">
                                    <form method="post" action="/CigarCase/DeleteComment?ReviewId=@review.Id">
                                        <button type="submit">Delete Review</button>
                                    </form>

                                    <button method="post" id="edit-button">Edit</button>
                                    <form method="post" action="/CigarCase/EditComment">
                                        <input id="petko" name="petko" value="@review.Review"/>
                                        <button hidden type="submit" id="end-editing">Done</button>
                                    </form>
                                </div>

                                @*<form class="input-group-sm" asp-controller="Ashtray" asp-action="RemoveFromDataBase" asp-route-AshtrayId="@ashtray.Id">
                                    <input class="fs-6 btn btn-success mb-3 p-2" type="submit" value="Remove" />
                                </form>*@
                            }

                    }
                </ul>
            </div>
        </div>
    </div>

    <div id="rightbox">
        <div class="mb-3">
            <form asp-action="Details" method="post">
                <div hidden>
                    <input asp-for="@Model.Id" class="form-control" aria-required="true" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.AddReviewToCigarPocketCase" class="form-label">Add Review To Cigar Pocket Csae </label>
                    <input asp-for="@Model.AddReviewToCigarPocketCase" class="form-control" aria-required="true" placeholder="This is ..." />
                    <span asp-validation-for="AddReviewToCigarPocketCase" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input class="btn btn-primary" type="submit" value="Add review" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>
